  <ItemGroup>
    <None Remove="Images\SnowmanPicture1.png" />
    <None Remove="Images\SnowmanPicture2.png" />
    <None Remove="Images\SnowmanPicture3.png" />
    <None Remove="Images\SnowmanPicture4.png" />
    <None Remove="Images\SnowmanPicture5.png" />
    <None Remove="Images\SnowmanPicture6.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\SnowmanIcon.ico" />
