  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\SnowmanPicture6.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CrypticWizard.RandomWordGenerator" Version="0.9.5" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MeltingSnowmanSystem\MeltingSnowmanSystem.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Images\snowman1picture.png">
