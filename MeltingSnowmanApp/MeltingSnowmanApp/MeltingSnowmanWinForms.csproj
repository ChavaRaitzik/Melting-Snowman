    </Content>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Images\SnowmanPicture1.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\SnowmanPicture2.png">
